<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		package="com.meta.ocean.app.demo.platform.meta.quest.openxr.vrnativeapplication.quest"
		android:versionCode="2"
		android:versionName="1.0" android:installLocation="auto" >

	<uses-sdk android:minSdkVersion="32" android:targetSdkVersion="32" />

	<uses-feature android:glEsVersion="0x00030001" android:required="true"/>
	<uses-feature android:name="android.hardware.vr.headtracking" android:required="false" />

	<application android:allowBackup="false" android:label="VRNativeApplication" android:icon="@mipmap/ic_launcher" android:roundIcon="@mipmap/ic_launcher_round">
		<meta-data android:name="com.samsung.android.vr.application.mode" android:value="vr_only"/>
		<activity
				android:name="com.meta.ocean.app.demo.platform.meta.quest.openxr.vrnativeapplication.quest.OpenXRVRNativeApplicationActivity"
				android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
				android:launchMode="singleTask"
				android:screenOrientation="landscape"
				android:excludeFromRecents="false"
				android:configChanges="screenSize|screenLayout|orientation|keyboardHidden|keyboard|navigation|uiMode|density"
				android:resizeableActivity="false"
				android:exported="true">
			<meta-data android:name="android.app.lib_name" android:value="OceanDemoPlatformMetaQuestOpenXRVRNativeApplication" />
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
	</application>
</manifest>
