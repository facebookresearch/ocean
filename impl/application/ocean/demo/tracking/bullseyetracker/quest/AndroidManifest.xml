<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		package="com.meta.ocean.app.demo.tracking.bullseyetracker.quest"
		android:versionCode="2"
		android:versionName="2.0" android:installLocation="auto" >

	<uses-sdk android:minSdkVersion="32" android:targetSdkVersion="32" />

	<uses-permission android:name="com.oculus.permission.HAND_TRACKING" />
	<uses-permission android:name="com.oculus.permission.ACCESS_MR_SENSOR_DATA" />

	<uses-feature android:glEsVersion="0x00030001" android:required="true"/>
	<uses-feature android:name="android.hardware.vr.headtracking" android:required="false" />
	<uses-feature android:name="oculus.software.handtracking" android:required="false" />
	<uses-feature android:name="android.hardware.vr.controllertracking" android:required="false" />
	<uses-feature android:name="com.oculus.feature.PASSTHROUGH" android:required="true" />
	<uses-feature android:name="com.oculus.feature.BOUNDARYLESS_APP" android:required="true" />

	<application android:allowBackup="false" android:label="OceanOpenXRBullseyeTracker">
		<meta-data android:name="com.samsung.android.vr.application.mode" android:value="vr_only"/>
		<meta-data android:name="com.oculus.supportedDevices" android:value="all"/>
		<activity
				android:name="com.meta.ocean.app.demo.tracking.bullseyetracker.quest.DemoTrackingBullseyeTrackerActivity"
				android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
				android:launchMode="singleTask"
				android:screenOrientation="landscape"
				android:excludeFromRecents="true"
				android:exported="true"
				android:configChanges="screenSize|screenLayout|orientation|keyboardHidden|keyboard|navigation|uiMode">
			<meta-data android:name="android.app.lib_name" android:value="OceanDemoBullseyeTracker" />
			<meta-data android:name="com.oculus.vr.focusaware" android:value="true"/>
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<uses-native-library android:name="libossdk.oculus.so" android:required="true" />
		<uses-native-library android:name="libripcclient.oculus.so" android:required="true" />
	</application>
</manifest>
