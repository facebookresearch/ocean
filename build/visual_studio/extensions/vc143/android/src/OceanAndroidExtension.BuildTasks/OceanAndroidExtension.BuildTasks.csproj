<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <RootNamespace>OceanAndroidExtension.BuildTasks</RootNamespace>
    <AssemblyName>OceanAndroidExtension.BuildTasks</AssemblyName>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Description>MSBuild tasks for Android NDK development with Visual Studio</Description>
    <!-- Suppress NU1603: Transitive dependency version mismatch in VS SDK packages -->
    <NoWarn>$(NoWarn);NU1603</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Framework" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" />
  </ItemGroup>

</Project>
