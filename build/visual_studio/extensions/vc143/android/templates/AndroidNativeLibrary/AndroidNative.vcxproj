<?xml version="1.0" encoding="utf-8"?>
<!--
  Ocean Android Extension - Native Library Project
  Uses the OceanNDK Application Type for Android NDK cross-compilation.
-->
<Project DefaultTargets="Build" ToolsVersion="Current" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- Project configurations - Static/Shared x Debug/Release for each ABI -->
  <ItemGroup Label="ProjectConfigurations">
    <!-- ARM64 configurations -->
    <ProjectConfiguration Include="Static Debug|ARM64">
      <Configuration>Static Debug</Configuration>
      <Platform>ARM64</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Static Release|ARM64">
      <Configuration>Static Release</Configuration>
      <Platform>ARM64</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Shared Debug|ARM64">
      <Configuration>Shared Debug</Configuration>
      <Platform>ARM64</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Shared Release|ARM64">
      <Configuration>Shared Release</Configuration>
      <Platform>ARM64</Platform>
    </ProjectConfiguration>
    <!-- ARM configurations -->
    <ProjectConfiguration Include="Static Debug|ARM">
      <Configuration>Static Debug</Configuration>
      <Platform>ARM</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Static Release|ARM">
      <Configuration>Static Release</Configuration>
      <Platform>ARM</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Shared Debug|ARM">
      <Configuration>Shared Debug</Configuration>
      <Platform>ARM</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Shared Release|ARM">
      <Configuration>Shared Release</Configuration>
      <Platform>ARM</Platform>
    </ProjectConfiguration>
    <!-- x64 configurations -->
    <ProjectConfiguration Include="Static Debug|x64">
      <Configuration>Static Debug</Configuration>
      <Platform>x64</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Static Release|x64">
      <Configuration>Static Release</Configuration>
      <Platform>x64</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Shared Debug|x64">
      <Configuration>Shared Debug</Configuration>
      <Platform>x64</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Shared Release|x64">
      <Configuration>Shared Release</Configuration>
      <Platform>x64</Platform>
    </ProjectConfiguration>
    <!-- x86 configurations -->
    <ProjectConfiguration Include="Static Debug|x86">
      <Configuration>Static Debug</Configuration>
      <Platform>x86</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Static Release|x86">
      <Configuration>Static Release</Configuration>
      <Platform>x86</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Shared Debug|x86">
      <Configuration>Shared Debug</Configuration>
      <Platform>x86</Platform>
    </ProjectConfiguration>
    <ProjectConfiguration Include="Shared Release|x86">
      <Configuration>Shared Release</Configuration>
      <Platform>x86</Platform>
    </ProjectConfiguration>
  </ItemGroup>

  <!-- Global project properties -->
  <PropertyGroup Label="Globals">
    <ProjectGuid>{$guid1$}</ProjectGuid>
    <RootNamespace>$safeprojectname$</RootNamespace>
    <ProjectName>$safeprojectname$</ProjectName>
    <Keyword>Android</Keyword>

    <!-- Use OceanNDK Application Type for proper property page support -->
    <ApplicationType>OceanNDK</ApplicationType>
    <ApplicationTypeRevision>1.0</ApplicationTypeRevision>

    <!-- Mark this as an Android NDK project -->
    <IsAndroidNdkProject>true</IsAndroidNdkProject>
  </PropertyGroup>

  <!-- Import VCTargets Default Props -->
  <Import Project="$(VCTargetsPath)\Microsoft.Cpp.Default.props" />

  <!-- Configuration - settings inherited from OceanNDK Application Type -->
  <!-- Static configurations produce .a static libraries -->
  <PropertyGroup Condition="'$(Configuration)'=='Static Debug' Or '$(Configuration)'=='Static Release'" Label="Configuration">
    <ConfigurationType>StaticLibrary</ConfigurationType>
    <CharacterSet>Unicode</CharacterSet>
  </PropertyGroup>

  <!-- Shared configurations produce .so shared libraries -->
  <PropertyGroup Condition="'$(Configuration)'=='Shared Debug' Or '$(Configuration)'=='Shared Release'" Label="Configuration">
    <ConfigurationType>DynamicLibrary</ConfigurationType>
    <CharacterSet>Unicode</CharacterSet>
  </PropertyGroup>

  <!-- Debug-specific settings -->
  <PropertyGroup Condition="'$(Configuration)'=='Static Debug' Or '$(Configuration)'=='Shared Debug'" Label="Configuration">
    <UseDebugLibraries>true</UseDebugLibraries>
  </PropertyGroup>

  <!-- Release-specific settings -->
  <PropertyGroup Condition="'$(Configuration)'=='Static Release' Or '$(Configuration)'=='Shared Release'" Label="Configuration">
    <UseDebugLibraries>false</UseDebugLibraries>
    <WholeProgramOptimization>true</WholeProgramOptimization>
  </PropertyGroup>

  <Import Project="$(VCTargetsPath)\Microsoft.Cpp.props" />

  <ImportGroup Label="ExtensionSettings" />
  <ImportGroup Label="Shared" />
  <ImportGroup Label="PropertySheets">
    <Import Project="$(UserRootDir)\Microsoft.Cpp.$(Platform).user.props"
            Condition="exists('$(UserRootDir)\Microsoft.Cpp.$(Platform).user.props')"
            Label="LocalAppDataPlatform" />
  </ImportGroup>

  <PropertyGroup Label="UserMacros" />

  <!-- Add project-specific include directories -->
  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>$(ProjectDir)src;%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
    </ClCompile>
  </ItemDefinitionGroup>

  <!-- Source files -->
  <ItemGroup>
    <ClCompile Include="src\NativeLibrary.cpp" />
  </ItemGroup>

  <!-- Header files -->
  <ItemGroup>
    <ClInclude Include="src\NativeLibrary.h" />
  </ItemGroup>

  <!-- Project files for IDE display -->
  <ItemGroup>
    <None Include="README.md" Condition="Exists('README.md')" />
  </ItemGroup>

  <Import Project="$(VCTargetsPath)\Microsoft.Cpp.targets" />

  <ImportGroup Label="ExtensionTargets" />

</Project>
