<?xml version="1.0" encoding="utf-8"?>
<!--
  Ocean Android Extension - Java Library Property Page Schema
  Defines the "General" property page for Android Java Library projects in Visual Studio.
-->
<Rule Name="OceanJavaLib_General"
      DisplayName="Ocean Android"
      Description="Android Java Library settings"
      PageTemplate="generic"
      Order="10"
      xmlns="http://schemas.microsoft.com/build/2009/properties"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib">

  <Rule.Categories>
    <Category Name="General" DisplayName="General" Description="General project settings" />
    <Category Name="Android" DisplayName="Android" Description="Android-specific settings" />
    <Category Name="Dependencies" DisplayName="Dependencies" Description="External library dependencies" />
  </Rule.Categories>

  <Rule.DataSource>
    <DataSource Persistence="ProjectFile" Label="Configuration" />
  </Rule.DataSource>

  <!-- General Category -->
  <StringProperty Name="TargetName"
                  DisplayName="Target Name"
                  Description="Specifies the name of the library."
                  Category="General"
                  Default="$(ProjectName)"
                  F1Keyword="VC.Project.VCConfiguration.TargetName">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label="" />
    </StringProperty.DataSource>
  </StringProperty>

  <!-- Android Category -->
  <StringProperty Name="AndroidNamespace"
                  DisplayName="Android Namespace"
                  Description="The namespace used for generated Android classes (R, BuildConfig). This does NOT affect the package declarations in your Java source files - those are defined in each .java file directly."
                  Category="Android"
                  Default="com.example.$(ProjectName.ToLower())"
                  F1Keyword="VC.Project.AndroidNamespace">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label="" />
    </StringProperty.DataSource>
  </StringProperty>

  <IntProperty Name="AndroidMinSdk"
               DisplayName="Minimum SDK Version"
               Description="Minimum Android SDK version required. (e.g., 24 = Android 7.0 Nougat)"
               Category="Android"
               Default="24"
               F1Keyword="VC.Project.AndroidMinSdk">
    <IntProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label="" />
    </IntProperty.DataSource>
  </IntProperty>

  <IntProperty Name="AndroidCompileSdk"
               DisplayName="Compile SDK Version"
               Description="Android SDK version used for compilation. Should be the latest stable SDK."
               Category="Android"
               Default="34"
               F1Keyword="VC.Project.AndroidCompileSdk">
    <IntProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label="" />
    </IntProperty.DataSource>
  </IntProperty>

  <EnumProperty Name="JavaVersion"
                DisplayName="Java Version"
                Description="Java language version for source and target compatibility."
                Category="Android"
                Default="VERSION_17"
                F1Keyword="VC.Project.JavaVersion">
    <EnumValue Name="VERSION_11" DisplayName="Java 11" Description="Java 11 (LTS)" />
    <EnumValue Name="VERSION_17" DisplayName="Java 17" Description="Java 17 (LTS) - Recommended" />
    <EnumValue Name="VERSION_21" DisplayName="Java 21" Description="Java 21 (LTS)" />
  </EnumProperty>

  <!-- Dependencies Category -->
  <StringProperty Name="GradleDependencies"
                  DisplayName="Gradle Dependencies"
                  Description="External library dependencies in Maven coordinate format. Enter one dependency per line, or separate with semicolons. Format: group:artifact:version (e.g., androidx.core:core-ktx:1.12.0). These are added as 'api' dependencies (exported to consumers)."
                  Category="Dependencies"
                  F1Keyword="VC.Project.GradleDependencies"
                  Subtype="multiline">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label="" />
    </StringProperty.DataSource>
  </StringProperty>

  <StringProperty Name="GradleImplementationDependencies"
                  DisplayName="Implementation Dependencies"
                  Description="Private dependencies not exposed to consumers. Enter one dependency per line, or separate with semicolons. Format: group:artifact:version. These are added as 'implementation' dependencies (not exported)."
                  Category="Dependencies"
                  F1Keyword="VC.Project.GradleImplementationDependencies"
                  Subtype="multiline">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" Label="" />
    </StringProperty.DataSource>
  </StringProperty>

</Rule>
