<?xml version="1.0" encoding="utf-8"?>
<!--
  OceanNDK Platform Toolset - C/C++ (Clang) Property Page Schema
  Defines the "C/C++" property page for Android NDK projects in Visual Studio.
-->
<Rule Name="OceanNDK_ClCompile"
      DisplayName="C/C++ (Android)"
      Description="C/C++ compiler (Clang) settings for Android NDK"
      PageTemplate="tool"
      SwitchPrefix="-"
      Order="20"
      xmlns="http://schemas.microsoft.com/build/2009/properties"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib">

  <Rule.Categories>
    <Category Name="General" DisplayName="General" Description="General compiler settings" />
    <Category Name="Optimization" DisplayName="Optimization" Description="Optimization settings" />
    <Category Name="Preprocessor" DisplayName="Preprocessor" Description="Preprocessor settings" />
    <Category Name="CodeGeneration" DisplayName="Code Generation" Description="Code generation settings" />
    <Category Name="Language" DisplayName="Language" Description="Language settings" />
    <Category Name="Advanced" DisplayName="Advanced" Description="Advanced settings" />
    <Category Name="CommandLine" DisplayName="Command Line" Description="Additional command line options" />
  </Rule.Categories>

  <Rule.DataSource>
    <DataSource Persistence="ProjectFile" ItemType="ClCompile" Label="" HasConfigurationCondition="true" />
  </Rule.DataSource>

  <!-- General Category -->
  <StringListProperty Name="AdditionalIncludeDirectories"
                      DisplayName="Additional Include Directories"
                      Description="Specifies one or more directories to add to the include path; separate with semicolons."
                      Category="General"
                      Subtype="folder"
                      F1Keyword="VC.Project.VCCLCompilerTool.AdditionalIncludeDirectories">
    <StringListProperty.DataSource>
      <DataSource Persistence="ProjectFile" ItemType="ClCompile" Label="" HasConfigurationCondition="true" />
    </StringListProperty.DataSource>
  </StringListProperty>

  <EnumProperty Name="DebugInformationFormat"
                DisplayName="Debug Information Format"
                Description="Specifies the type of debugging information generated by the compiler."
                Category="General"
                F1Keyword="VC.Project.VCCLCompilerTool.DebugInformationFormat">
    <EnumValue Name="None" DisplayName="None" Description="No debugging information" />
    <EnumValue Name="LineNumber" DisplayName="Line Number Only" Description="Line number information only (-gline-tables-only)" />
    <EnumValue Name="FullDebug" DisplayName="Full Debug (-g)" Description="Full DWARF debug information" />
    <EnumValue Name="FullDebugDwarf4" DisplayName="Full Debug DWARF4 (-g -gdwarf-4)" Description="Full DWARF4 debug information" />
  </EnumProperty>

  <EnumProperty Name="WarningLevel"
                DisplayName="Warning Level"
                Description="Select how strict the compiler should be about code warnings."
                Category="General"
                F1Keyword="VC.Project.VCCLCompilerTool.WarningLevel">
    <EnumValue Name="TurnOffAllWarnings" DisplayName="Turn Off All Warnings (-w)" Description="Disable all warnings" />
    <EnumValue Name="Level1" DisplayName="Level 1 (-Wall)" Description="Enable common warnings" />
    <EnumValue Name="Level2" DisplayName="Level 2 (-Wall -Wextra)" Description="Enable extra warnings" />
    <EnumValue Name="Level3" DisplayName="Level 3 (-Wall -Wextra -Wpedantic)" Description="Enable pedantic warnings" />
    <EnumValue Name="Level4" DisplayName="Enable All (-Weverything)" Description="Enable all warnings (very strict)" />
  </EnumProperty>

  <BoolProperty Name="TreatWarningAsError"
                DisplayName="Treat Warnings As Errors"
                Description="Treat all warnings as errors (-Werror)."
                Category="General"
                Default="false"
                F1Keyword="VC.Project.VCCLCompilerTool.WarnAsError" />

  <!-- Optimization Category -->
  <EnumProperty Name="Optimization"
                DisplayName="Optimization"
                Description="Select the optimization level for code generation."
                Category="Optimization"
                F1Keyword="VC.Project.VCCLCompilerTool.Optimization">
    <EnumValue Name="Disabled" DisplayName="Disabled (-O0)" Description="No optimization, fastest compile" />
    <EnumValue Name="MinSpace" DisplayName="Minimize Size (-Os)" Description="Optimize for small code size" />
    <EnumValue Name="MinSizeAggressive" DisplayName="Minimize Size Aggressive (-Oz)" Description="Aggressively optimize for size" />
    <EnumValue Name="MaxSpeed" DisplayName="Maximize Speed (-O2)" Description="Optimize for speed" />
    <EnumValue Name="Full" DisplayName="Full Optimization (-O3)" Description="Maximum optimization" />
    <EnumValue Name="Fast" DisplayName="Fast Math (-Ofast)" Description="Fast, potentially unsafe math optimizations" />
  </EnumProperty>

  <BoolProperty Name="OmitFramePointers"
                DisplayName="Omit Frame Pointer"
                Description="Omit frame pointers for faster function calls (-fomit-frame-pointer)."
                Category="Optimization"
                Default="false"
                F1Keyword="VC.Project.VCCLCompilerTool.OmitFramePointers" />

  <BoolProperty Name="FunctionLevelLinking"
                DisplayName="Function-Level Linking"
                Description="Place each function in its own section (-ffunction-sections). Enables linker garbage collection."
                Category="Optimization"
                Default="true"
                F1Keyword="VC.Project.VCCLCompilerTool.EnableFunctionLevelLinking" />

  <BoolProperty Name="DataLevelLinking"
                DisplayName="Data-Level Linking"
                Description="Place each data item in its own section (-fdata-sections). Enables linker garbage collection."
                Category="Optimization"
                Default="true"
                F1Keyword="VC.Project.VCCLCompilerTool.EnableDataLevelLinking" />

  <!-- Preprocessor Category -->
  <StringListProperty Name="PreprocessorDefinitions"
                      DisplayName="Preprocessor Definitions"
                      Description="Defines preprocessor symbols. Separate multiple definitions with semicolons."
                      Category="Preprocessor"
                      F1Keyword="VC.Project.VCCLCompilerTool.PreprocessorDefinitions">
    <StringListProperty.DataSource>
      <DataSource Persistence="ProjectFile" ItemType="ClCompile" Label="" HasConfigurationCondition="true" />
    </StringListProperty.DataSource>
  </StringListProperty>

  <StringListProperty Name="UndefinePreprocessorDefinitions"
                      DisplayName="Undefine Preprocessor Definitions"
                      Description="Undefines preprocessor symbols (-U). Separate multiple symbols with semicolons."
                      Category="Preprocessor"
                      F1Keyword="VC.Project.VCCLCompilerTool.UndefinePreprocessorDefinitions">
    <StringListProperty.DataSource>
      <DataSource Persistence="ProjectFile" ItemType="ClCompile" Label="" HasConfigurationCondition="true" />
    </StringListProperty.DataSource>
  </StringListProperty>

  <!-- Code Generation Category -->
  <BoolProperty Name="RuntimeTypeInfo"
                DisplayName="Enable Run-Time Type Information"
                Description="Enable RTTI support (-frtti/-fno-rtti)."
                Category="CodeGeneration"
                Default="true"
                F1Keyword="VC.Project.VCCLCompilerTool.RuntimeTypeInfo" />

  <BoolProperty Name="ExceptionHandling"
                DisplayName="Enable C++ Exceptions"
                Description="Enable C++ exception handling (-fexceptions/-fno-exceptions)."
                Category="CodeGeneration"
                Default="true"
                F1Keyword="VC.Project.VCCLCompilerTool.ExceptionHandling" />

  <BoolProperty Name="PositionIndependentCode"
                DisplayName="Position Independent Code"
                Description="Generate position-independent code (-fPIC). Required for shared libraries."
                Category="CodeGeneration"
                Default="true"
                F1Keyword="VC.Project.VCCLCompilerTool.PositionIndependentCode" />

  <BoolProperty Name="ThumbMode"
                DisplayName="Thumb Mode"
                Description="Generate Thumb instructions for ARM targets (-mthumb). Produces smaller code."
                Category="CodeGeneration"
                Default="false"
                F1Keyword="VC.Project.VCCLCompilerTool.ThumbMode" />

  <!-- Language Category -->
  <EnumProperty Name="LanguageStandard"
                DisplayName="C++ Language Standard"
                Description="The C++ language standard to use."
                Category="Language"
                F1Keyword="VC.Project.VCCLCompilerTool.CppLanguageStandard">
    <EnumValue Name="c++11" DisplayName="C++11 (-std=c++11)" Description="ISO C++11 Standard" />
    <EnumValue Name="c++14" DisplayName="C++14 (-std=c++14)" Description="ISO C++14 Standard" />
    <EnumValue Name="c++17" DisplayName="C++17 (-std=c++17)" Description="ISO C++17 Standard" />
    <EnumValue Name="c++20" DisplayName="C++20 (-std=c++20)" Description="ISO C++20 Standard" />
    <EnumValue Name="c++23" DisplayName="C++23 (-std=c++23)" Description="ISO C++23 Standard" />
    <EnumValue Name="gnu++17" DisplayName="GNU++17 (-std=gnu++17)" Description="GNU dialect of C++17" />
    <EnumValue Name="gnu++20" DisplayName="GNU++20 (-std=gnu++20)" Description="GNU dialect of C++20" />
  </EnumProperty>

  <EnumProperty Name="LanguageStandard_C"
                DisplayName="C Language Standard"
                Description="The C language standard to use."
                Category="Language"
                F1Keyword="VC.Project.VCCLCompilerTool.CLanguageStandard">
    <EnumValue Name="c99" DisplayName="C99 (-std=c99)" Description="ISO C99 Standard" />
    <EnumValue Name="c11" DisplayName="C11 (-std=c11)" Description="ISO C11 Standard" />
    <EnumValue Name="c17" DisplayName="C17 (-std=c17)" Description="ISO C17 Standard" />
    <EnumValue Name="gnu11" DisplayName="GNU C11 (-std=gnu11)" Description="GNU dialect of C11" />
    <EnumValue Name="gnu17" DisplayName="GNU C17 (-std=gnu17)" Description="GNU dialect of C17" />
  </EnumProperty>

  <!-- Advanced Category -->
  <StringProperty Name="ObjectFileName"
                  DisplayName="Object File Name"
                  Description="Specifies the name of the output object file."
                  Category="Advanced"
                  Default="$(IntDir)%(RelativeDir)%(Filename).o"
                  F1Keyword="VC.Project.VCCLCompilerTool.ObjectFile">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" ItemType="ClCompile" Label="" HasConfigurationCondition="true" />
    </StringProperty.DataSource>
  </StringProperty>

  <!-- Command Line Category -->
  <StringProperty Name="AdditionalOptions"
                  DisplayName="Additional Options"
                  Description="Additional command line options to pass to the compiler."
                  Category="CommandLine"
                  F1Keyword="VC.Project.VCCLCompilerTool.AdditionalOptions">
    <StringProperty.DataSource>
      <DataSource Persistence="ProjectFile" ItemType="ClCompile" Label="" HasConfigurationCondition="true" />
    </StringProperty.DataSource>
  </StringProperty>

</Rule>
