<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <_PropertySheetDisplayName>Ocean (Common)</_PropertySheetDisplayName>
  </PropertyGroup>

  <PropertyGroup>
    <ocean_common_imported>True</ocean_common_imported>
  </PropertyGroup>

  <!-- Ocean root path (relative to this file: build/visual_studio/android/vc143 -> ocean root) -->
  <PropertyGroup>
    <OceanRootPath>$([MSBuild]::NormalizeDirectory('$(MSBuildThisFileDirectory)..\..\..\..'))</OceanRootPath>
  </PropertyGroup>

  <ItemDefinitionGroup>
	  <ClCompile>
      <AdditionalIncludeDirectories>$(OceanRootPath)impl;%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
	    <ExceptionHandling>Enabled</ExceptionHandling>
	    <AdditionalOptions>-fsigned-char %(AdditionalOptions)</AdditionalOptions>
	    <CppLanguageStandard>c++1z</CppLanguageStandard>
      <RuntimeTypeInfo>true</RuntimeTypeInfo>
    </ClCompile>
  </ItemDefinitionGroup>

  <PropertyGroup>
    <UseMultiToolTask>true</UseMultiToolTask>
  </PropertyGroup>

  <ItemDefinitionGroup Condition="'$(Configuration)'=='Static Debug'">
    <ClCompile>
      <PreprocessorDefinitions>OCEAN_RUNTIME_STATIC;_DEBUG;EXTENDED_DEBUG;ENABLE_LOGGING=1;_ANDROID;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(Configuration)'=='Static Profile' Or '$(Configuration)'=='Static Release'">
    <ClCompile>
      <PreprocessorDefinitions>OCEAN_RUNTIME_STATIC;NDEBUG;ENABLE_LOGGING=1;_ANDROID;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(Configuration)'=='Shared Debug'">
    <ClCompile>
      <PreprocessorDefinitions>OCEAN_RUNTIME_SHARED;_DEBUG;EXTENDED_DEBUG;ENABLE_LOGGING=1;_ANDROID;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(Configuration)'=='Shared Profile' Or '$(Configuration)'=='Shared Release'">
    <ClCompile>
      <PreprocessorDefinitions>OCEAN_RUNTIME_SHARED;NDEBUG;ENABLE_LOGGING=1;_ANDROID;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='Static Debug|ARM64'">
    <Link>
      <AdditionalLibraryDirectories>$(OceanRootPath)bin\lib\android_arm64_cl50_static_debug;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
    </Link>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='Static Debug|ARM'">
    <Link>
      <AdditionalLibraryDirectories>$(OceanRootPath)bin\lib\android_arm_cl50_static_debug;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
    </Link>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='Static Profile|ARM64'">
    <Link>
      <AdditionalLibraryDirectories>$(OceanRootPath)bin\lib\android_arm64_cl50_static_profile;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
    </Link>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='Static Profile|ARM'">
    <Link>
      <AdditionalLibraryDirectories>$(OceanRootPath)bin\lib\android_arm_cl50_static_profile;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
    </Link>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='Static Release|ARM64'">
    <Link>
      <AdditionalLibraryDirectories>$(OceanRootPath)bin\lib\android_arm64_cl50_static;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
    </Link>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='Static Release|ARM'">
    <Link>
      <AdditionalLibraryDirectories>$(OceanRootPath)bin\lib\android_arm_cl50_static;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
    </Link>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='Shared Debug|ARM64'">
    <Link>
      <AdditionalLibraryDirectories>$(OceanRootPath)bin\lib\android_arm64_cl50_shared_debug;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
    </Link>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='Shared Debug|ARM'">
    <Link>
      <AdditionalLibraryDirectories>$(OceanRootPath)bin\lib\android_arm_cl50_shared_debug;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
    </Link>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='Shared Profile|ARM64'">
    <Link>
      <AdditionalLibraryDirectories>$(OceanRootPath)bin\lib\android_arm64_cl50_shared_profile;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
    </Link>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='Shared Profile|ARM'">
    <Link>
      <AdditionalLibraryDirectories>$(OceanRootPath)bin\lib\android_arm_cl50_shared_profile;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
    </Link>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='Shared Release|ARM64'">
    <Link>
      <AdditionalLibraryDirectories>$(OceanRootPath)bin\lib\android_arm64_cl50_shared;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
    </Link>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='Shared Release|ARM'">
    <Link>
      <AdditionalLibraryDirectories>$(OceanRootPath)bin\lib\android_arm_cl50_shared;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
    </Link>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup Condition="'$(Configuration)'=='Static Debug' Or '$(Configuration)'=='Shared Debug'">
    <ClCompile>
      <DebugInformationFormat>FullDebug</DebugInformationFormat>
      <Optimization>Disabled</Optimization>
      <BufferSecurityCheck>true</BufferSecurityCheck>
      <FunctionLevelLinking>false</FunctionLevelLinking>
    </ClCompile>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup Condition="'$(Configuration)'=='Static Profile' Or '$(Configuration)'=='Shared Profile'">
    <ClCompile>
      <DebugInformationFormat>FullDebug</DebugInformationFormat>
      <Optimization>Full</Optimization>
      <OmitFramePointers>true</OmitFramePointers>
      <BufferSecurityCheck>true</BufferSecurityCheck>
      <FunctionLevelLinking>true</FunctionLevelLinking>
    </ClCompile>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup Condition="'$(Configuration)'=='Static Release' Or '$(Configuration)'=='Shared Release'">
    <ClCompile>
      <DebugInformationFormat>None</DebugInformationFormat>
      <Optimization>Full</Optimization>
      <OmitFramePointers>true</OmitFramePointers>
      <BufferSecurityCheck>false</BufferSecurityCheck>
      <FunctionLevelLinking>true</FunctionLevelLinking>
    </ClCompile>
  </ItemDefinitionGroup>

</Project>
