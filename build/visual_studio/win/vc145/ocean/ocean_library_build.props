<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="Current" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <_PropertySheetDisplayName>Build Ocean Libraries</_PropertySheetDisplayName>
  </PropertyGroup>

  <PropertyGroup>
    <ocean_library_build_imported>True</ocean_library_build_imported>
  </PropertyGroup>

  <ImportGroup Label="Dependencies">
    <Import Condition="'$(ocean_common_imported)' != 'True'" Project="ocean_common.props"/>
  </ImportGroup>

  <PropertyGroup>
    <OutDir>$(OceanRootPath)bin\lib\$(OceanConfigFolder)\</OutDir>
    <IntDir>$(OceanRootPath)bin\tmp\impl\ocean\$(ProjectName)\$(OceanConfigFolder)\</IntDir>
  </PropertyGroup>

  <ItemDefinitionGroup Condition="'$(Configuration)'=='Static Debug' Or '$(Configuration)'=='Static Profile' Or '$(Configuration)'=='Static Release'">
    <Lib>
      <OutputFile>$(OutDir)$(TargetName)$(TargetExt)</OutputFile>
    </Lib>
  </ItemDefinitionGroup>
  <ItemDefinitionGroup Condition="'$(Configuration)'=='Shared Debug' Or '$(Configuration)'=='Shared Profile' Or '$(Configuration)'=='Shared Release'">
    <Link>
      <OutputFile>$(OutDir)$(TargetName)$(TargetExt)</OutputFile>
    </Link>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup Condition="'$(Configuration)'=='Shared Debug' Or '$(Configuration)'=='Shared Profile' Or '$(Configuration)'=='Shared Release'">
    <PostBuildEvent>
      <Message>Copying libraries to build directory</Message>
      <Command>if not exist "$(OceanRootPath)bin\dll\$(OceanConfigFolder)" mkdir "$(OceanRootPath)bin\dll\$(OceanConfigFolder)"
copy $(OutDir)$(TargetName)$(TargetExt) "$(OceanRootPath)bin\dll\$(OceanConfigFolder)"
</Command>
    </PostBuildEvent>
  </ItemDefinitionGroup>
</Project>
