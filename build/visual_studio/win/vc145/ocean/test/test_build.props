<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="Current" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <_PropertySheetDisplayName>Build Ocean Test Library</_PropertySheetDisplayName>
  </PropertyGroup>

  <PropertyGroup>
    <ocean_test_build_imported>True</ocean_test_build_imported>
  </PropertyGroup>

  <ImportGroup Label="Dependencies">
    <Import Condition="'$(ocean_common_imported)' != 'True'" Project="../../ocean_common.props"/>
    <Import Condition="'$(ocean_test_common_imported)' != 'True'" Project="test_common.props"/>
    <Import Condition="'$(ocean_test_reference_imported)' != 'True'" Project="test_reference.props"/>
  </ImportGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Static Debug' Or '$(Configuration)'=='Shared Debug'">
    <TargetName>OceanTestD</TargetName>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Static Profile' Or '$(Configuration)'=='Static Release' Or '$(Configuration)'=='Shared Profile' Or '$(Configuration)'=='Shared Release'">
    <TargetName>OceanTest</TargetName>
  </PropertyGroup>

  <ItemDefinitionGroup Condition="'$(Configuration)'=='Shared Debug' Or '$(Configuration)'=='Shared Profile' Or '$(Configuration)'=='Shared Release'">
    <ClCompile>
      <PreprocessorDefinitions>USE_OCEAN_TEST_EXPORT;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>

  <PropertyGroup>
    <OutDir>$(OCEAN_DEVELOPMENT_PATH)\bin\test\lib\$(OceanConfigFolder)\</OutDir>
    <IntDir>$(OCEAN_DEVELOPMENT_PATH)\bin\tmp\impl\ocean\$(ProjectName)\$(OceanConfigFolder)\</IntDir>
  </PropertyGroup>

  <ItemDefinitionGroup Condition="'$(Configuration)'=='Shared Debug' Or '$(Configuration)'=='Shared Profile' Or '$(Configuration)'=='Shared Release'">
    <PostBuildEvent>
      <Message>Copying libraries to build directory</Message>
      <Command>if not exist "$(OCEAN_DEVELOPMENT_PATH)\bin\test\dll\$(OceanConfigFolder)" mkdir "$(OCEAN_DEVELOPMENT_PATH)\bin\test\dll\$(OceanConfigFolder)"
copy $(OutDir)$(TargetName)$(TargetExt) "$(OCEAN_DEVELOPMENT_PATH)\bin\test\dll\$(OceanConfigFolder)"</Command>
    </PostBuildEvent>
  </ItemDefinitionGroup>
</Project>
