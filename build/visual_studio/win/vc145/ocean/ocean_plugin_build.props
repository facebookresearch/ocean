<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="Current" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <_PropertySheetDisplayName>Build Ocean Plugins</_PropertySheetDisplayName>
  </PropertyGroup>

  <PropertyGroup>
    <ocean_plugin_build_imported>True</ocean_plugin_build_imported>
  </PropertyGroup>

  <ImportGroup Label="Dependencies">
    <Import Condition="'$(ocean_common_imported)' != 'True'" Project="ocean_common.props"/>
  </ImportGroup>

  <PropertyGroup>
    <OutDir>$(OceanRootPath)bin\lib\$(OceanConfigFolder)\</OutDir>
    <IntDir>$(OceanRootPath)bin\tmp\impl\ocean\$(ProjectName)\$(OceanConfigFolder)\</IntDir>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Shared Debug' Or '$(Configuration)'=='Shared Profile' Or '$(Configuration)'=='Shared Release'">
    <TargetExt>.opf</TargetExt>
  </PropertyGroup>

  <ItemDefinitionGroup Condition="'$(Configuration)'=='Shared Debug'">
    <ResourceCompile>
      <PreprocessorDefinitions>_DEBUG;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ResourceCompile>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup Condition="'$(Configuration)'=='Shared Debug' Or '$(Configuration)'=='Shared Profile' Or '$(Configuration)'=='Shared Release'">
    <PostBuildEvent>
      <Message>Copying libraries to build directory</Message>
      <Command>if not exist "$(OceanRootPath)bin\plugins\$(OceanConfigFolder)" mkdir "$(OceanRootPath)bin\plugins\$(OceanConfigFolder)"
copy $(OutDir)$(TargetName)$(TargetExt) "$(OceanRootPath)bin\plugins\$(OceanConfigFolder)"
</Command>
    </PostBuildEvent>
  </ItemDefinitionGroup>
</Project>
