<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="Current" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <_PropertySheetDisplayName>Use Ocean Media USB JNI (Android)</_PropertySheetDisplayName>
  </PropertyGroup>

  <PropertyGroup>
    <ocean_mediausbjni_use_imported>True</ocean_mediausbjni_use_imported>
  </PropertyGroup>

  <ImportGroup Label="Dependencies">
    <Import Condition="'$(ocean_mediausbjni_common_imported)' != 'True'" Project="mediausbjni_common.props"/>
  </ImportGroup>

  <!-- Link against debug library -->
  <ItemDefinitionGroup Condition="$(Configuration.Contains('Debug'))">
    <Link>
      <AdditionalDependencies>OceanMediaUSBJniD;%(AdditionalDependencies)</AdditionalDependencies>
    </Link>
  </ItemDefinitionGroup>

  <!-- Link against release library -->
  <ItemDefinitionGroup Condition="!$(Configuration.Contains('Debug'))">
    <Link>
      <AdditionalDependencies>OceanMediaUSBJni;%(AdditionalDependencies)</AdditionalDependencies>
    </Link>
  </ItemDefinitionGroup>
</Project>
